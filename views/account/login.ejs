<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form class="form" action="/account/login" method="POST">
    <label for="email">Email:</label>
    <input type="email" name="account_email" id="email" required placeholder="Enter a valid email address">

    <label for="password">Password:</label>
    <input type="password" name="account_password" id="password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <small>
        Password must be at least 12 characters, contain at least 1 capital letter, 
        1 number, and 1 special character.
    </small>

    <button type="submit">Login</button>
</form>

<p class="register">
  Don't have an account? 
  <a href="/account/register">Register here</a>
</p>