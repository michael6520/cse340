<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form class="form" action="/inv/add-classification" method="post">
  <label for="classification_name">Classification Name</label>
  <input
    type="text"
    id="classification_name"
    name="classification_name"
    required
    pattern="^[A-Za-z]+$"
    title="Classification name must contain letters only (no spaces or special characters)."
    value="<%= locals.classification_name %>"
  >
  <small>
    No spaces or special characters
  </small>

  <button type="submit">Add Classification</button>
</form>